{
  "name": "Balance",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "mysql": {
      "schema": "LOOPBACK",
      "table": "zn_balance"
    }
  },
  "properties": {
    "amount": {
      "type": "number",
      "dataType": "double",
      "dataPrecision": 2,
      "required": true,
      "comments": "The balance amount of the shop"
    },
    "created_time": {
      "type": "number",
      "required": true,
      "comments": "seconds from 1970-1-1"
    },
    "updated_time": {
      "type": "number",
      "required": true,
      "comments": "seconds from 1970-1-1"
    }
  },
  "validations": [],
  "relations": {
    "shop": {
      "type": "belongsTo",
      "model": "Shop",
      "foreignKey": "shop_id"
    }
  },
  "acls": [{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "*"
    }],
  "methods": {}
}
